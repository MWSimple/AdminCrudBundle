<div class="col-lg-9">
    <div class="float-left col-lg-3">
        <a class="btn btn-info col-lg-11" href="{{ "{{ path('" ~ route_name_prefix ~ "') }}" }}">
            {{ "{{ 'views.recordactions.backtothelist'|trans({}, 'MWSimpleCrudGeneratorBundle') }}" }}
        </a>
    </div>
{% if ('edit' in actions) and (not hide_edit) %}
    <div class="float-left col-lg-3">
        <a class="btn btn-primary col-lg-11" href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity.id }) }}" }}">
            {{ "{{ 'views.recordactions.edit'|trans({}, 'MWSimpleCrudGeneratorBundle') }}" }}
        </a>
    </div>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
    <div class="float-left col-lg-3">{{ '{{ form(delete_form) }}' }}</div>
{% endif %}
</div>
