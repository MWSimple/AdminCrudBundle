fieldsindex:
{%- for field in fields %}
    
    a.{{ field.fieldName }}:
        label: '{{ field.fieldName|capitalize }}'
        name: '{{ field.fieldName|capitalize }}'
        
    {%- if field.type in ['datetime', 'datetimetz'] %}
        type: '{{ field.type }}'
        date: 'Y-m-d H:i:s'
    {%- elseif field.type in ['date'] %}
        type: '{{ field.type }}'
        date: 'Y-m-d'
    {%- elseif field.type in ['time'] %}
        type: '{{ field.type }}'
        date: 'H:i:s'
    {%- endif %}
    
     {%- if field.type == 1 %}
        type: 'ONE_TO_ONE'
        alias: '{{ field.fieldName }}'
        campos: 
            - 'id'
        join: 'LEFT'
    {%- elseif field.type == 2 %}
        type: 'MANY_TO_ONE'
        alias: '{{ field.fieldName }}'
        campos: 
            - 'id'
        join: 'LEFT'
    {%- elseif field.type == 4 %}
        type: 'ONE_TO_MANY'
        alias: '{{ field.fieldName }}'
        campos: 
            - 'id'
        join: 'LEFT'
    {% endif %}

        export: true
{%- endfor %}
{%- for field in associations if field.type not in [4,8] %}

    a.{{ field.fieldName }}:
        label: '{{ field.fieldName|capitalize }}'
        name: '{{ field.fieldName|capitalize }}'
    {%- if field.type == 1 %}

        type: 'ONE_TO_ONE'
    {%- elseif field.type == 2 %}

        type: 'MANY_TO_ONE'
    {%- elseif field.type == 4 %}

        type: 'ONE_TO_MANY'
    {%- elseif field.type == 8 %}

        type: 'MANY_TO_MANY'
    {%- else %}

        type: 'entity'
    {%- endif %}
{%- endfor %}

