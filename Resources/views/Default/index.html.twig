{% extends 'MWSimpleAdminCrudBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.index.list'|trans({'%entity%': config.entityName}, 'MWSimpleAdminCrudBundle') }}
{% endblock %}

{% block page %}
<div class="row">
    <div class="col-lg-2">
        {% if filterForm.vars.errors|length > 0 %}
        <div class="alert alert-block alert-danger fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
        &nbsp;
    </div>
    <div class="col-lg-12">
        <div class="filters-right">
            <a class="btn btn-primary dropdown-toggle" data-toggle="collapse" data-target="#filters">
                {{ 'views.index.filters'|trans({}, 'MWSimpleAdminCrudBundle') }}
                <span class="caret"></span>
            </a>
        </div>
    </div>
    <div class="col-lg-12">
        <div id="filters" class="well collapse">
            <div class="form-group">
            {{ form_start(filterForm) }}
            {{ form_end(filterForm) }}
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>{{ 'views.index.list'|trans({'%entity%': config.entityName}, 'MWSimpleAdminCrudBundle') }}</h3>
        </div>
        <table class="table table-striped table-bordered table-condensed table-responsive">
            <thead>
                <tr>
                    <th{% if entities.isSorted('a.Id') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Id', 'a.id') }}</th>
                    <th{% if entities.isSorted('a.Booleano') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Booleano', 'a.booleano') }}</th>
                    <th{% if entities.isSorted('a.Entero') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Entero', 'a.entero') }}</th>
                    <th{% if entities.isSorted('a.Smallentero') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Smallentero', 'a.smallEntero') }}</th>
                    <th{% if entities.isSorted('a.Bigentero') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Bigentero', 'a.bigEntero') }}</th>
                    <th{% if entities.isSorted('a.Cadena') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Cadena', 'a.cadena') }}</th>
                    <th{% if entities.isSorted('a.Texto') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Texto', 'a.texto') }}</th>
                    <th{% if entities.isSorted('a.Fechatiempo') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Fechatiempo', 'a.fechatiempo') }}</th>
                    <th{% if entities.isSorted('a.Dechatiempoz') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Dechatiempoz', 'a.dechatiempoz') }}</th>
                    <th{% if entities.isSorted('a.Fecha') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Fecha', 'a.fecha') }}</th>
                    <th{% if entities.isSorted('a.Tiempo') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Tiempo', 'a.tiempo') }}</th>
                    <th{% if entities.isSorted('a.Numerodecimal') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Numerodecimal', 'a.numerodecimal') }}</th>
                    <th{% if entities.isSorted('a.Numeroconcoma') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Numeroconcoma', 'a.numeroconcoma') }}</th>
                    <th>{{ 'views.index.actions'|trans({}, 'MWSimpleAdminCrudBundle') }}</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path(config.show, { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.booleano }}</td>
                    <td>{{ entity.entero }}</td>
                    <td>{{ entity.smallEntero }}</td>
                    <td>{{ entity.bigEntero }}</td>
                    <td>{{ entity.cadena }}</td>
                    <td>{{ entity.texto }}</td>
                    <td>{% if entity.fechatiempo %}{{ entity.fechatiempo|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if entity.dechatiempoz %}{{ entity.dechatiempoz|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if entity.tiempo %}{{ entity.tiempo|date('H:i:s') }}{% endif %}</td>
                    <td>{{ entity.numerodecimal }}</td>
                    <td>{{ entity.numeroconcoma }}</td>
                    <td>
                        <a class="glyphicon glyphicon-search tooltips"  href="{{ path(config.show, { 'id': entity.id }) }}" title="" rel="tooltip" data-original-title="{{ 'views.actions.show'|trans({'%entity%': config.entityName}, 'MWSimpleAdminCrudBundle') }}"></a>
                        <a class="glyphicon glyphicon-edit tooltips"  href="{{ path(config.edit, { 'id': entity.id }) }}" title="" rel="tooltip" data-original-title="{{ 'views.actions.edit'|trans({'%entity%': config.entityName}, 'MWSimpleAdminCrudBundle') }}"></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="col-lg-4 navigation">
        {{ knp_pagination_render(entities) }}
    </div>
        <div class="col-lg-8">
            <a class="btn btn-primary likepaginator" href="{{ path(config.new) }}">
                {{ 'views.index.createnew'|trans({'%entity%': config.entityName}, 'MWSimpleAdminCrudBundle') }}
            </a>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        $('.tooltips').tooltip();
    </script>
{% endblock %}